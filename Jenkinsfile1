pipeline{
       agent any
       environment{
             PATH="/opt/apache-maven-3.9.0/bin:$PATH"
       }
         stages{
             stage("clone"){
                 steps{
                     git 'https://github.com/rajeshdevopsraja/maven-web-application.git'
                 }
            }
            stage("build"){
                 steps{
                      sh "mvn clean package"
                }
			}
            stage("Create EC2 Manchine"){
                 steps{
                    sh ''' terraform validate
                    terraform plan'''
                }
            }
       }
}
